#!/usr/bin/env ruby

require_relative "../lib/game_logic"

puts "================== Tic Tac Toe =================="

puts "Who is going to be 'X' symbol? Enter your name: "
player1 = gets.chomp

puts "Who is going to be 'O' symbol? Enter your name: "
player2 = gets.chomp

players = { player1 => "X", player2 => "O" }

board = Board.new

game_on = true
winner = nil
draw = false
turn = true

while game_on
  current_player = turn == true ? players.keys[0] : players.keys[1]
  board.display
  puts "#{current_player} make your move: "
  move = gets.chomp
  board.verify_move(move, players[current_player])
  #board.update_board(move, players[current_player])
  turn = !turn
  if winner || draw
    game_on = false
  end
end

puts winner.nil? ? "it's a tie." : "the winner is #{winner}"
