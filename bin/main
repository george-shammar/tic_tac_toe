#!/usr/bin/env ruby
puts "Welcome to tic_tac_toe championship"

#player 1 registration
puts "Player one, enter your name."
player_one = gets.chomp
puts "Welcome #{player_one}. Choose your game token. Press X or O"
player_one_token = gets.chomp.upcase

while player_one_token != "X" && player_one_token != "O" do
    puts "Oops! Wrong token. Choose 'X' or 'O'."
    player_one_token = gets.chomp.upcase
end
puts "You've chosen #{player_one_token}. You're all setup. Wait for your turn."

#player 2 registration
puts "Player two, enter your name."
player_two = gets.chomp
player_two_token = ""
player_one_token == "X" ? player_two_token = "O" : player_two_token = "X"

puts "Welcome #{player_two}. Your token is #{player_two_token}"


